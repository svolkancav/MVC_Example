@model IEnumerable<_18_MVC_Example.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolFoundingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolFoundingDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SchooldId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SchooldId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SchooldId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
